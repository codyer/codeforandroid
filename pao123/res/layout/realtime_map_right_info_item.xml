<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="#00000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/str_pause_time_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/init_time"
        	android:layout_gravity="center"
            android:textColor="@color/pao123_txt_white_color"
            android:textSize="30sp" />
        
        <TextView
            android:id="@+id/str_pause_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/init_time_txt"
        android:layout_gravity="bottom|end"
        android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/pao123_orange_main_color"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/str_distance_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/distance_is_null"
                android:textColor="@color/pao123_txt_white_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/str_speed_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/speed_is_null"
                android:textColor="@color/pao123_txt_white_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/str_heartbeat_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/heartbeat_is_null"
                android:textColor="@color/pao123_txt_white_color"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/str_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/distance_map_text"
                android:textColor="@color/pao123_orange_main_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/str_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/speed_map_text"
                android:textColor="@color/pao123_orange_main_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/str_heartbeat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/heartbeat_map_text"
                android:textColor="@color/pao123_orange_main_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
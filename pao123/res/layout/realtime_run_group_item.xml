<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"  
    android:background="@android:color/transparent" >

    <ImageView
        android:id="@+id/real_time_group_ico_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:contentDescription="@null"
        android:src="@drawable/real_time_default_ico" />

    <TextView
        android:id="@+id/real_time_group_user_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_toEndOf="@+id/real_time_group_ico_img"
        android:layout_toRightOf="@+id/real_time_group_ico_img"
        android:text="@string/init_string"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/real_time_group_arrow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@null"
        android:src="@drawable/real_time_right_arrow" />

    <FrameLayout
        android:id="@+id/real_time_group_count_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_toLeftOf="@+id/real_time_group_arrow_btn"
        android:layout_toStartOf="@+id/real_time_group_arrow_btn" >

        <ImageView
            android:id="@+id/real_time_group_count_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:contentDescription="@null"
            android:gravity="center"
            android:src="@drawable/real_time_count_bg" />

        <TextView
            android:id="@+id/real_time_group_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:text="@string/init_string"
            android:textColor="@android:color/white" />
    </FrameLayout>

</RelativeLayout>